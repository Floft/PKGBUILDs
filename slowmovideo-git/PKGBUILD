# I just removed some things and changed GIT repo...
pkgname=slowmovideo-git
pkgver=latest
pkgrel=1
pkgdesc="Slows down video playback"
arch=(i686 x86_64)
url=http://slowmovideo.granjow.net/index.html
license=(GPL)
depends=(ffmpeg freeglut glew nvidia-cg-toolkit opencv qt sdl)
#depends=(ffmpeg freeglut opencv qt glew sdl libcl)
makedepends=(cmake git)

build()
{
  git clone https://github.com/slowmoVideo/slowmoVideo
  cd "${srcdir}"/slowmoVideo/slowmoVideo
  mkdir build 
  cd build
  cmake ..
  make
  make install
  cd "${srcdir}"/slowmoVideo/V3D
  mkdir build 
  cd build
  cmake ..
  make
  make install
  mkdir -p "${pkgdir}"/usr/share/slowmovideo
  cd "${srcdir}"/slowmoVideo/install
  mv bin include lib "${pkgdir}"/usr/share/slowmovideo/
  mkdir -p "${pkgdir}"/usr/bin
  f="${pkgdir}"/usr/bin/slowmovideo
  echo '#!/bin/bash' > "$f"
  echo 'cd /usr/share/slowmovideo/bin' >> "$f"
  echo './slowmoUI' >> "$f"
  chmod +x "$f"
}

