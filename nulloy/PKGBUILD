# Maintainer: Garrett <floft.net/contact>
pkgname=nulloy
pkgver=0.8
pkgrel=1
pkgdesc="Music Player with a Waveform Progress Bar"
arch=('i686' 'x86_64')
url="http://nulloy.com/"
license=('GPLv3')
depends=('qt4' 'qt5-tools' 'gstreamer0.10-base-plugins' 'taglib')
source=("https://github.com/$pkgname/$pkgname/releases/download/$pkgver/${pkgname}-${pkgver}.tar.gz")
md5sums=('4b6851307b5271d2837e7bc99b46e45c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  export QTDIR=/usr/include/qt4
  export QMAKE=/usr/bin/qmake-qt4

  # We build it twice to fix bizarre issue where plugins aren't built
  ./configure --prefix=/usr
  make
  ./configure --prefix=/usr --taglib --no-update-check
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir/" install
}
