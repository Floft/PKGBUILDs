# Maintainer: Brad Fanella <bradfanella@archlinux.us>
# Contributor: Wittfella <wittfella@wittfella.com>

pkgname=qtfm
pkgver=4.8
pkgrel=3
pkgdesc="A lightweight file manager"
arch=('i686' 'x86_64')
url="http://www.qtfm.org"
license=('GPL')
depends=('qt')
source=(http://www.qtfm.org/$pkgname-4.9.beta.tar.gz)
md5sums=('dda7a99e7ff1c9f4452588eb95d52aec')

build() {
  	cd "$startdir/src/$pkgname-4.9.beta"
   	qmake
   	make
}

package() {
	cd "$startdir/src/$pkgname-4.9.beta"
	install -Dm 755 ${startdir}/src/$pkgname-4.9.beta/qtfm ${startdir}/pkg/usr/bin/qtfm
	install -Dm 644 ${startdir}/src/$pkgname-4.9.beta/qtfm.desktop ${startdir}/pkg/usr/share/applications/qtfm.desktop
	install -Dm 644 ${startdir}/src/$pkgname-4.9.beta/images/qtfm.png ${startdir}/pkg/usr/share/pixmaps/qtfm.png
}

