# Maintainer: Garrett <floft.net/contact>
pkgname=gimp-plugin-layerfx
pkgver=0.1
pkgrel=2
pkgdesc="A GIMP plugin for layer effects."
arch=('i686' 'x86_64')
url='http://registry.gimp.org/node/186'
license=('GPL3')
depends=('gimp')
source=('http://registry.gimp.org/files/layerfx.py')
md5sums=('5e8d2bc9d38962cb54bfe9081519006f')

build() {
	cd "$srcdir"
	sed -i "s|/usr/bin/env python|&2|g" "layerfx.py"
	mkdir -p 		    "$pkgdir/usr/share/gimp/2.0/scripts/"
	install -Dm755 "layerfx.py" "$pkgdir/usr/share/gimp/2.0/scripts/"
}
