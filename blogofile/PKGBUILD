# Maintainer: Garrett <floft.net/contact>
pkgname=blogofile
pkgver=0.7.1
pkgrel=1
pkgdesc="A static website compiler and blog engine, written and extended in Python."
arch=('any')
url="http://blogofile.com/"
license=('MIT')
depends=('python2' 'docutils' 'python2-pygments' 'python2-argparse' 'python-markdown'
	 'python-textile' 'python2-yaml' 'python2-pytz')
source=("http://pypi.python.org/packages/source/B/Blogofile/$pkgname-$pkgver.tar.gz")
md5sums=("a1fe1d9018eb5a84a076cd3f0d4bf8a2")

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
} 
