# Maintainer: Garrett <floft.net/contact>
pkgname=worldwind
pkgver=0.5.0
pkgrel=5
pkgdesc="Open 3D earth viewer with GPS support"
url="http://sourceforge.net/projects/nasa-exp/"
license=('custom')
arch=('i686' 'x86_64')
depends=('jogl')
optdepends=('libtxc_dxtn: radeon and nouveau support')
makedepends=()
source=(license.txt http://downloads.sourceforge.net/project/nasa-exp/World%20Wind%20Java/$pkgver/worldwind-release.$pkgver.zip)
md5sums=('bf7da6334b8860f18e5496085388f46f' '6efb29a4720c98503bcabb18810f7d2b')

build() {
        cd "$srcdir"
	cat > worldwind <<EOF
#!/bin/bash
cd '/usr/share/worldwind/';
java -Xmx512m -Dsun.java2d.noddraw=true -classpath ./src:./classes:./worldwind.jar:./jogl.jar:./gluegen-rt.jar gov.nasa.worldwind.examples.ApplicationTemplate
EOF
	mkdir -p "$pkgdir/usr/share/worldwind/"
	cp -r *  "$pkgdir/usr/share/worldwind"

	mkdir -p "$pkgdir/usr/bin/"
	install -Dm755 worldwind "$pkgdir/usr/bin/"

	install -Dm644 "$srcdir/license.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
